// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  user_id        Int            @id @unique @default(autoincrement())
  email          String         @unique
  full_name      String?
  photo_url      String?
  password_hash  String?
  auth_providers auth_provider?

  @@map("user")
}

model auth_provider {
  provider_id       Int           @id @unique @default(autoincrement())
  provider_user_id  String        @unique
  provider_names_id Int
  user_id           Int           @unique
  user              user          @relation(fields: [user_id], references: [user_id])
  provider_names    provider_name @relation(fields: [provider_names_id], references: [provider_names_id])

  @@map("auth_provider")
}

model provider_name {
  provider_names_id Int             @id @unique @default(autoincrement())
  name              String          @unique
  auth_providers    auth_provider[]

  @@map("provider_name")
}

model template_category {
  template_category_id Int    @id @unique @default(autoincrement())
  name                 String @unique

  @@map("template_category")
}
